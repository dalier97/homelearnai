parameters:
    paths:
        - app/
    level: 1
    treatPhpDocTypesAsCertain: false

    # Performance optimization
    parallel:
        jobSize: 20
        maximumNumberOfProcesses: 16
        processTimeout: 600.0

    excludePaths:
        - app/Http/Controllers/IcsImportController.php
        - app/Http/Controllers/KidsModeController.php

    # Ignore common Laravel/Eloquent false positives
    ignoreErrors:
        - '#Call to an undefined static method App\\Models\\.*::(create|find|findOrFail|where|whereHas|forUser|insert|first|limit|exists|factory)#'
        - '#Access to an undefined property App\\Models\\.*::\$.*#'
        - '#Call to static method .* on an unknown class (Log|Hash)#'